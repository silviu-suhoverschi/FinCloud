# FinCloud Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://fincloud:fincloud_dev_password@localhost:5432/fincloud

# Redis
REDIS_URL=redis://localhost:6379/0

# API Keys for Price Fetching
# Yahoo Finance - No API key required (set to true/false to enable/disable)
YAHOO_FINANCE_ENABLED=true

# Alpha Vantage - Get your free API key from: https://www.alphavantage.co/support/#api-key
# Free tier: 5 API requests per minute, 500 per day
ALPHA_VANTAGE_API_KEY=demo

# CoinGecko - API key is optional for free tier
# Free tier: 10-50 calls/minute. Get API key from: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=

# JWT Secret (Generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-change-in-production

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=fincloud
MINIO_SECRET_KEY=fincloud_dev_password
MINIO_BUCKET=fincloud-storage

# OAuth2 / Keycloak (Production)
OAUTH2_CLIENT_ID=fincloud
OAUTH2_CLIENT_SECRET=your-client-secret
OAUTH2_ISSUER_URL=https://auth.yourdomain.com/realms/fincloud

# Application Settings
LOG_LEVEL=info
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
